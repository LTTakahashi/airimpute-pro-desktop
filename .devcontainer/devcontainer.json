{
  "name": "Tauri-Python-Security-Test-Env",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "extensions": [
    "rust-lang.rust-analyzer",
    "ms-python.python"
  ],
  "runArgs": ["--cap-add=SYS_ADMIN", "--device=/dev/fuse"],
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/home/vscode/project,type=bind"
  ],
  "postCreateCommand": "cd src-tauri && cargo build"
}